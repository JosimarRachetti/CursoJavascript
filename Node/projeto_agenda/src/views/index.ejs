<%- include('includes/header')%>
<div class="borda">
<div class="shadow change p-3 mb-5 bg-white rounded" style="background-color: darkgrey">
<%- include('includes/navbar')%>
    <div class="text-center">

            <h2>Contatos</h2>
            <%- include('includes/messages')%>
            <% if(contatos.length > 0){%>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefone</th>
                </tr>
                </thead>
                <tbody>
                <%console.log(contatos)%>
                <% contatos.forEach( contato => { %>
                    <tr>
                        <td><%= contato.nome %></td>
                        <td><%= contato.sobrenome %></td>
                        <td><%= contato.email %></td>
                        <td><%= contato.telefone %></td>
                        <td><a href="/contato/register/<%= contato._id %>">Editar</a></td>
                        <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
            <% } else { %>
                <h3 class="text-center">sua agenda esta vazia</h3>
            <% } %>
    </div>
<%- include('includes/footer')%>
</div>
</div>